


@inherits NotificationComponentBase

<div class="alert-service">
    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            @*<img src="..." class="rounded mr-2" alt="...">*@
            <strong class="mr-auto">Bootstrap</strong>
            <small>11 mins ago</small>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            @for (int c = 0; c < NotificationService.messages.Count; c++)
            {
                <span class="alert @getAlertClass(NotificationService.messages[c])">@NotificationService.messages[c].message</span>
            }
        </div>
    </div>
</div>



